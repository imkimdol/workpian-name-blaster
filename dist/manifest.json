{
  "manifest_version": 3,
  "name": "WorkPian Name Blaster",
  "version": "0.9",
  "description": "Censors biographical data in Workday and Appian LFSM.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "popup/icons/icon16.png",
    "32": "popup/icons/icon32.png",
    "48": "popup/icons/icon48.png",
    "128": "popup/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.myworkday.com/ubc*"],
      "js": ["workday.js"]
    },
    {
      "matches": ["https://*.appiancloud.com/*"],
      "js": ["appian.js"]
    }
  ],
 "web_accessible_resources": [
    {
      "matches": ["https://*.myworkday.com/*"],
      "resources": [
        "config.json",
        "configParser.js",
        "replace/helpers.js",
        "replace/listNames.js",
        "replace/simpleTemplateNames.js",
        "replace/tableNames.js"
      ]
    },
    {
      "matches": ["https://*.appiancloud.com/*"],
      "resources": [
        "config.json",
        "configParser.js",
        "replace/helpers.js",
        "replace/listNamesAppian.js",
        "replace/simpleTemplateNames.js",
        "replace/tableNames.js"
      ]
    }
  ]
}